{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2015", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
